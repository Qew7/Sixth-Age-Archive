<%# Page Header %>
<section class="py-16 bg-gradient-to-b from-stone-900 to-stone-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl">
      <h1 class="font-cinzel text-4xl md:text-5xl font-bold text-amber-100 mb-4">
        Rules & Supplements
      </h1>
      <p class="text-xl text-stone-400">
        Complete collection of 6th Edition rulebooks, FAQs, errata, and supplements.
        Download official PDFs for all your gaming needs.
      </p>
    </div>
  </div>
</section>

<section class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% Rulebook::CATEGORIES.each do |category| %>
      <% rulebooks = @rulebooks_by_category[category] %>
      <% if rulebooks&.any? %>
        <div class="mb-12">
          <h2 class="font-cinzel text-2xl font-semibold text-amber-400 mb-6 flex items-center gap-3">
            <% case category %>
            <% when "core" %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
              Core Rulebooks
            <% when "supplement" %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
              Supplements
            <% when "faq" %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              FAQs
            <% when "errata" %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Errata & Amendments
            <% end %>
          </h2>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% rulebooks.each do |rulebook| %>
              <div class="bg-stone-900/80 backdrop-blur-sm rounded-lg border-2 border-amber-900/50 p-6 hover:border-amber-700/50 transition-all shadow-lg">
                <div class="flex items-start gap-4">
                  <% if rulebook.cover_image_url.present? %>
                    <%= image_tag rulebook.cover_image_url, class: "w-20 h-28 object-cover rounded shadow-lg", alt: rulebook.title %>
                  <% else %>
                    <div class="w-20 h-28 bg-gradient-to-br from-stone-700 to-stone-800 rounded shadow-lg flex items-center justify-center shrink-0">
                      <svg class="w-8 h-8 text-stone-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                      </svg>
                    </div>
                  <% end %>
                  <div class="flex-1 min-w-0">
                    <h3 class="font-cinzel text-lg font-semibold text-amber-100 mb-1 truncate">
                      <%= rulebook.title %>
                    </h3>
                    <% if rulebook.source.present? %>
                      <p class="text-stone-500 text-sm mb-2"><%= rulebook.source %></p>
                    <% end %>
                    <% if rulebook.description.present? %>
                      <p class="text-stone-400 text-sm line-clamp-2 mb-3"><%= rulebook.description %></p>
                    <% end %>
                    <% if rulebook.pdf.attached? %>
                      <%= link_to download_rulebook_path(rulebook), class: "inline-flex items-center gap-2 px-4 py-2 bg-red-900/50 text-red-200 rounded-lg border border-red-800/50 hover:bg-red-800/50 hover:border-red-700 transition-all text-sm" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Download PDF
                      <% end %>
                    <% else %>
                      <span class="text-stone-600 text-sm italic">PDF coming soon</span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

    <% if @rulebooks_by_category.values.all? { |r| r.nil? || r.empty? } %>
      <div class="text-center py-20">
        <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-stone-800 flex items-center justify-center">
          <svg class="w-10 h-10 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
        </div>
        <h3 class="font-cinzel text-xl text-stone-400 mb-2">No rulebooks yet</h3>
        <p class="text-stone-500">Rulebooks will be added soon. Check back later!</p>
      </div>
    <% end %>
  </div>
</section>
