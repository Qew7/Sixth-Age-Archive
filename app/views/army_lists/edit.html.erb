<%# Page Header with Points Summary %>
<section class="py-8 bg-gradient-to-b from-stone-900 to-stone-950 sticky top-16 z-40 border-b border-stone-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <div>
        <div class="flex items-center gap-3 mb-1">
          <%= link_to army_lists_path, class: "text-stone-500 hover:text-amber-400 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <h1 class="font-cinzel text-2xl font-bold text-amber-100"><%= @army_list.name %></h1>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-semibold uppercase tracking-wide bg-stone-700/50 text-stone-300 border border-stone-600/50"><%= @army_list.game_format.name %></span>
        </div>
        <p class="text-stone-500"><%= @army_list.army.name %></p>
      </div>

      <%# Points Summary %>
      <div class="flex items-center gap-6">
        <div class="text-right">
          <div class="flex items-baseline gap-1">
            <span class="font-cinzel text-3xl font-bold text-amber-400"><%= @army_list.total_points || 0 %></span>
            <span class="text-stone-500">/ <%= @army_list.game_format.points_limit %> pts</span>
          </div>
          <div class="text-sm <%= @army_list.remaining_points >= 0 ? 'text-emerald-400' : 'text-red-400' %>">
            <%= @army_list.remaining_points >= 0 ? "#{@army_list.remaining_points} pts remaining" : "#{@army_list.remaining_points.abs} pts over!" %>
          </div>
        </div>
        
        <div class="flex gap-2">
          <%= link_to @army_list, class: "inline-flex items-center gap-2 px-4 py-2 font-cinzel font-semibold rounded bg-stone-800 text-stone-200 hover:bg-stone-700 border border-stone-600 shadow-lg transition-all text-sm" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            View
          <% end %>
        </div>
      </div>
    </div>

    <%# Validation Errors %>
    <% if @validation_errors.any? %>
      <div class="mt-4 p-3 bg-red-900/30 border border-red-700 rounded-lg">
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-red-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          <div class="text-sm text-red-300">
            <% @validation_errors.each do |error| %>
              <p><%= error %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<section class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-3 gap-8">
      <%# Current Units - Left Column (2/3) %>
      <div class="lg:col-span-2 space-y-6">
        <% Unit::UNIT_TYPES.each do |unit_type| %>
          <% units_of_type = @units_by_type[unit_type] || [] %>
          <% badge_color = case unit_type
             when 'lord' then 'bg-purple-900/50 text-purple-300 border-purple-700/50'
             when 'hero' then 'bg-blue-900/50 text-blue-300 border-blue-700/50'
             when 'core' then 'bg-stone-700/50 text-stone-300 border-stone-600/50'
             when 'special' then 'bg-amber-900/50 text-amber-300 border-amber-700/50'
             when 'rare' then 'bg-red-900/50 text-red-300 border-red-700/50'
             end %>
          <div class="bg-stone-900/80 backdrop-blur-sm rounded-lg border-2 border-amber-900/50 p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
              <h3 class="font-cinzel text-lg font-semibold flex items-center gap-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-semibold uppercase tracking-wide border <%= badge_color %>"><%= unit_type.titleize %></span>
                <span class="text-stone-500 font-normal text-sm">
                  (<%= units_of_type.sum(&:calculated_cost) %> pts)
                </span>
              </h3>
            </div>

            <% if units_of_type.any? %>
              <div class="space-y-3">
                <% units_of_type.each do |alu| %>
                  <div class="flex items-center justify-between p-3 bg-stone-800/50 rounded-lg group">
                    <div class="flex-1">
                      <div class="flex items-center gap-2">
                        <span class="font-semibold text-stone-200"><%= alu.unit.name %></span>
                        <span class="text-stone-500">Ã—<%= alu.quantity %></span>
                      </div>
                      <% if alu.selected_upgrades_details.any? %>
                        <div class="text-xs text-stone-500 mt-1">
                          <%= alu.selected_upgrades_details.map { |u| "#{u[:name]} (+#{u[:cost]})" }.join(", ") %>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex items-center gap-4">
                      <span class="font-cinzel text-amber-400 font-bold"><%= alu.calculated_cost %> pts</span>
                      <%= button_to remove_unit_army_list_path(@army_list, army_list_unit_id: alu.id), 
                          method: :delete,
                          class: "p-1 text-stone-500 hover:text-red-400 opacity-0 group-hover:opacity-100 transition-all",
                          data: { turbo_confirm: "Remove #{alu.unit.name}?" } do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-stone-500 text-sm italic">No <%= unit_type %> units added yet</p>
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Add Units - Right Column (1/3) %>
      <div class="lg:col-span-1">
        <div class="bg-stone-900/80 backdrop-blur-sm rounded-lg border-2 border-amber-900/50 p-6 shadow-lg sticky top-48">
          <h3 class="font-cinzel text-lg font-semibold text-amber-100 mb-4">Add Units</h3>
          
          <% if @available_units.any? %>
            <div class="space-y-2 max-h-[60vh] overflow-y-auto pr-2">
              <% Unit::UNIT_TYPES.each do |unit_type| %>
                <% available = @available_units.select { |u| u.unit_type == unit_type } %>
                <% if available.any? %>
                  <div class="mb-4">
                    <div class="text-xs font-semibold text-stone-500 uppercase tracking-wide mb-2">
                      <%= unit_type.titleize %>
                    </div>
                    <% available.each do |unit| %>
                      <%= button_to add_unit_army_list_path(@army_list, unit_id: unit.id, quantity: unit.min_size || 1),
                          method: :post,
                          class: "w-full text-left p-2 rounded hover:bg-stone-800 transition-colors group flex items-center justify-between" do %>
                        <div>
                          <span class="text-stone-200 group-hover:text-amber-300"><%= unit.name %></span>
                          <span class="text-stone-500 text-sm ml-1">(<%= unit.base_cost %> pts)</span>
                        </div>
                        <svg class="w-4 h-4 text-stone-600 group-hover:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-stone-500 text-sm italic">No units available for this army.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
