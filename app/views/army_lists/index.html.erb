<%# Page Header %>
<section class="py-16 bg-gradient-to-b from-stone-900 to-stone-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="font-cinzel text-4xl md:text-5xl font-bold text-amber-100 mb-4">
          Army Builder
        </h1>
        <p class="text-xl text-stone-400">
          Create, manage, and export your army lists for 6th Edition.
        </p>
      </div>
      <%= link_to new_army_list_path, class: "inline-flex items-center gap-2 px-6 py-3 font-cinzel font-semibold rounded bg-gradient-to-b from-amber-600 to-amber-700 text-amber-50 hover:from-amber-500 hover:to-amber-600 border border-amber-500/50 shadow-lg transition-all shrink-0" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        New Army List
      <% end %>
    </div>
  </div>
</section>

<section class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @army_lists.any? %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @army_lists.each do |army_list| %>
          <%= link_to army_list_path(army_list), class: "bg-stone-900/80 backdrop-blur-sm rounded-lg border-2 border-amber-900/50 p-6 hover:border-amber-700/50 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1 group block" do %>
            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="font-cinzel text-xl font-semibold text-amber-100 group-hover:text-amber-300 transition-colors">
                  <%= army_list.name %>
                </h3>
                <p class="text-stone-500 text-sm"><%= army_list.army.name %></p>
              </div>
              <div class="text-right">
                <div class="font-cinzel text-2xl text-amber-400 font-bold"><%= army_list.total_points || 0 %></div>
                <div class="text-stone-500 text-xs">/ <%= army_list.game_format.points_limit %> pts</div>
              </div>
            </div>

            <%# Progress bar %>
            <div class="mb-4">
              <% progress = army_list.game_format.points_limit > 0 ? [(army_list.total_points || 0) * 100.0 / army_list.game_format.points_limit, 100].min : 0 %>
              <div class="h-2 bg-stone-800 rounded-full overflow-hidden">
                <div class="h-full bg-gradient-to-r from-amber-600 to-amber-400 transition-all duration-300" 
                     style="width: <%= progress %>%"></div>
              </div>
            </div>

            <div class="flex items-center justify-between text-sm">
              <span class="text-stone-500">
                <%= army_list.army_list_units.count %> units
              </span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-semibold uppercase tracking-wide bg-stone-700/50 text-stone-300 border border-stone-600/50"><%= army_list.game_format.name %></span>
            </div>

            <div class="mt-4 pt-4 border-t border-stone-700/50 flex items-center justify-between">
              <span class="text-stone-500 text-xs">
                Updated <%= time_ago_in_words(army_list.updated_at) %> ago
              </span>
              <svg class="w-5 h-5 text-stone-600 group-hover:text-amber-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-20">
        <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-stone-800 flex items-center justify-center">
          <svg class="w-12 h-12 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
          </svg>
        </div>
        <h3 class="font-cinzel text-2xl text-stone-300 mb-2">No Army Lists Yet</h3>
        <p class="text-stone-500 mb-8 max-w-md mx-auto">
          Create your first army list to start planning your battles in the Old World.
        </p>
        <%= link_to new_army_list_path, class: "inline-flex items-center gap-2 px-6 py-3 font-cinzel font-semibold rounded bg-gradient-to-b from-amber-600 to-amber-700 text-amber-50 hover:from-amber-500 hover:to-amber-600 border border-amber-500/50 shadow-lg transition-all" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Create Your First List
        <% end %>
      </div>
    <% end %>
  </div>
</section>
