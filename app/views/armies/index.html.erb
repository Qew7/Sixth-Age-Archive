<%# Page Header %>
<section class="py-16 bg-gradient-to-b from-stone-900 to-stone-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl">
      <h1 class="font-cinzel text-4xl md:text-5xl font-bold text-amber-100 mb-4">
        Army Books
      </h1>
      <p class="text-xl text-stone-400">
        All official 6th Edition army books and supplemental army lists from White Dwarf 
        and campaign supplements.
      </p>
    </div>
  </div>
</section>

<section class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @armies_by_source.any? %>
      <% ["Army Book", "Storm of Chaos", "White Dwarf", "Ravening Hordes"].each do |source_type| %>
        <% armies = @armies_by_source[source_type] %>
        <% if armies&.any? %>
          <div class="mb-12">
            <h2 class="font-cinzel text-2xl font-semibold mb-6 flex items-center gap-3 text-amber-400">
              <% case source_type %>
              <% when "Army Book" %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
                Official Army Books
              <% when "Storm of Chaos" %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
                Storm of Chaos
              <% when "White Dwarf" %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                </svg>
                White Dwarf Lists
              <% when "Ravening Hordes" %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Ravening Hordes
              <% end %>
            </h2>

            <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              <% armies.each do |army| %>
                <%= link_to army_path(army), class: "bg-stone-900/80 backdrop-blur-sm rounded-lg border-2 border-amber-900/50 p-5 hover:border-amber-700/50 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1 group block" do %>
                  <div class="flex items-start gap-4">
                    <% if army.book_cover_url.present? %>
                      <%= image_tag army.book_cover_url, class: "w-16 h-20 object-cover rounded shadow-lg", alt: army.name %>
                    <% else %>
                      <div class="w-16 h-20 bg-gradient-to-br from-stone-700 to-stone-800 rounded shadow-lg flex items-center justify-center shrink-0">
                        <span class="font-cinzel text-2xl font-bold text-amber-600"><%= army.name[0] %></span>
                      </div>
                    <% end %>
                    <div class="flex-1 min-w-0">
                      <h3 class="font-cinzel text-lg font-semibold text-amber-100 group-hover:text-amber-300 transition-colors truncate">
                        <%= army.name %>
                      </h3>
                      <p class="text-stone-500 text-sm mb-2"><%= army.source || "Army Book" %></p>
                      <div class="flex items-center gap-2 text-sm text-stone-400">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                        <%= army.units.count %> units
                      </div>
                    </div>
                  </div>
                  
                  <% if army.pdf.attached? %>
                    <div class="mt-4 pt-4 border-t border-stone-700/50">
                      <span class="inline-flex items-center gap-2 px-4 py-2 bg-red-900/50 text-red-200 rounded-lg border border-red-800/50 text-sm w-full justify-center">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        PDF Available
                      </span>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="text-center py-20">
        <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-stone-800 flex items-center justify-center">
          <svg class="w-10 h-10 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"/>
          </svg>
        </div>
        <h3 class="font-cinzel text-xl text-stone-400 mb-2">No armies yet</h3>
        <p class="text-stone-500">Army books will be added soon. Check back later!</p>
      </div>
    <% end %>
  </div>
</section>
